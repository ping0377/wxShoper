/* 提示弹窗 */
.uni-tip {
	padding: 15px;
	width: 250px;
	background: #fff;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-radius: 10px;
}
.uni-tip-title {
	text-align: center;
	font-weight: bold;
	font-size: 16px;
	color: #333;
}
.uni-tip-content {
	padding: 5px;
	font-size: 14px;
	color: #666;
}
.uni-tip-group-button {
	margin-top: 10px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.uni-tip-button {
	width: 100%;
	text-align: center;
	font-size: 14px;
	color: #3b4144;
}

