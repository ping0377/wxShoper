}
.use,
.unused {
	width: 50%;
	text-align: center;
}
.use {
	background-color: #1AAD19;
	color: #FFFFFF;
}
.unused {
	background-color: rgb(201, 200, 200);
}
.prompt {
	text-align: center;
	margin-top: 30rpx;
}
.secede {
	background-color: #FFFFFF;
	text-align: right;
}
.secede text {
	position: relative;
	right: 20rpx;
	color: #0000FF;
}
.sec_login {
	width: 50%;
	height: 150rpx;
	background-color: #FFFFFF;
	border-radius: 10rpx;
	position: absolute;
	left: 50%;
	top: 50%;
	-webkit-transform: translate(-50%, -50%);
	    -ms-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	/* display: none; */
}
.sec_login .affirm {
	text-align: center;
	font-size: 35rpx;
	font-weight: 600;
	line-height: 35px;
	margin-top: 7rpx;
}
.option text {
	font-size: 35rpx;
	display: inline-block;
	width: 50%;
	text-align: center;
	color: #666666;
}
.option text:first-child {}
